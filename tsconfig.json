{
  "compilerOptions": {
    /* Basic Options */
    // "incremental": true,                   /* Enable incremental compilation */
    "target": "ES2016",
    "module": "commonJS",
    "lib": ["ES2016"],
    "outDir": "./dist",
    "removeComments": true, //清注释
    "strictNullChecks": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true, // 启用es模块化交互非es模块导出
    "moduleResolution": "node"
  },
  "include": ["./src"],
  /*
    "files": ["./src/index.ts "]
  */
}
